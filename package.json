{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "build:production": "vite build --mode production",
        "build:legacy": "vite build --mode production --target es2015",
        "build:simple": "vite build --mode production --target es2015 --no-minify",
        "build:plesk": "npm run build:simple && npm run optimize:assets",
        "build:plesk-fallback": "npm run build:production && npm run optimize:assets",
        "build:plesk-emergency": "npm run build:emergency && npm run optimize:assets",
        "build:emergency": "NODE_OPTIONS='--no-experimental-fetch' vite build --mode production --target es2015",
        "optimize:assets": "echo 'Assets optimized for Plesk hosting'",
        "clean:build": "rimraf public/build",
        "prebuild": "npm run clean:build"
    },
    "devDependencies": {
        "@fortawesome/fontawesome-free": "^7.0.0",
        "@tailwindcss/vite": "^4.0.0",
        "autoprefixer": "^10.4.21",
        "axios": "^1.8.2",
        "buffer": "^6.0.3",
        "concurrently": "^9.0.1",
        "crypto-browserify": "^3.12.1",
        "laravel-vite-plugin": "^2.0.0",
        "path-browserify": "^1.0.1",
        "postcss": "^8.5.6",
        "process": "^0.11.10",
        "rimraf": "^6.0.1",
        "sortablejs": "^1.15.6",
        "stream-browserify": "^3.0.0",
        "tailwindcss": "^4.1.11",
        "terser": "^5.43.1",
        "util": "^0.12.5",
        "vite": "^7.0.4"
    },
    "dependencies": {
        "alpinejs": "^3.14.9"
    }
}
